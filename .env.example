# Configuração do Banco de Dados
# Substitua 'usuario', 'senha' e 'controle_gastos' pelos seus valores
DATABASE_URL=mysql://usuario:senha@localhost:3306/controle_gastos

# Chave secreta para JWT (gere uma string aleatória de pelo menos 32 caracteres)
# Você pode gerar uma com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua_chave_secreta_de_pelo_menos_32_caracteres_aqui

# Configuração da Aplicação
VITE_APP_TITLE=Controle de Gastos
VITE_APP_LOGO=https://placehold.co/128x128/10b981/ffffff?text=CG

# Porta do servidor (opcional, padrão: 3000)
PORT=3000

# ========================================
# OAuth NÃO É MAIS NECESSÁRIO PARA USO LOCAL
# As variáveis abaixo podem ser ignoradas
# ========================================
